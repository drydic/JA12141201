package deadlock;

public class DeadLock implements Runnable{
	
	static Object s1 = new Object();
	static Object s2 = new Object();
	
	public void run() {
		if (Thread.currentThread().getName().equals("th1")) {
			synchronized (s1) {
				System.out.println("线程1锁定线程1");
				try {
					Thread.sleep(100);
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
				synchronized (s2) {
					System.out.println("线程1锁定线程s2");
				}
			}
		}
		else {
			synchronized (s2) {
				System.out.println("线程2锁定线程s2");
				try {
					Thread.sleep(100);
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
				synchronized (s1) {
					System.out.println("线程2锁定线程s1");
				}
			}
		}
	}

	public static void main(String[] args) {
		
	}


}
